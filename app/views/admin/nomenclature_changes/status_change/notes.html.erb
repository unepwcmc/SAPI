<h2>New status change: nomenclature change notes</h2>
<%= status_change_blurb %>
<%= nomenclature_change_form do |f| %>

  <%= f.fields_for :primary_output do |ff| %>
    <div class="control-group">
      <label class="control-label">
        <%= ff.object.display_full_name %>
      </label>
      <div class="controls">
        <%= render partial: 'admin/nomenclature_changes/build/nomenclature_notes',
          locals: {ff: ff}
        %>
      </div>
    </div>
  <% end %>

  <% if @nomenclature_change.is_swap? %>
    <%= f.fields_for :secondary_output do |ff| %>
      <div class="control-group">
        <label class="control-label">
          <%= ff.object.display_full_name %>
        </label>
        <div class="controls">
          <%= render partial: 'admin/nomenclature_changes/build/nomenclature_notes',
            locals: {ff: ff}
          %>
        </div>
      </div>
    <% end %>
  <% end %>

<% end %>