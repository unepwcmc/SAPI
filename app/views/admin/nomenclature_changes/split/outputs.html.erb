<h2>New nomenclature change</h2>
<%= nested_form_for @nomenclature_change, url: wizard_path, method: :put do |f| %>
  <%= error_messages_for(@nomenclature_change) %>
  Select taxa to split into:
  <%= f.fields_for :outputs do |ff| %>
    <!-- TODO figure out the restrictions on the auto complete here, none for now -->
    <%= ff.text_field :taxon_concept_id, {:class => 'taxon-concept'} %>
    <%= ff.hidden_field :is_input, :value => false %>
    <%= ff.link_to_remove "Remove" %>
  <% end %>
  <p><%= f.link_to_add "Add", :outputs %></p>

  <%= render 'admin/nomenclature_changes/build/cancel_button' %>
  <%= f.submit "Next" %>
<% end %>
