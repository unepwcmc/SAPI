<h2>New split: handle distribution</h2>
<%= split_blurb %>
<p>
  <i class="icon-info-sign"></i>
  Please check distribution assignments for newly split species. Distribution can be assigned to multiple split outputs.
</p>
<%= nomenclature_change_form do |f| %>
  <p>
    <i class="icon-info-sign"></i>
    Global selection
  </p>
  <% @nomenclature_change.outputs.map do |output| %>
    <div class='species-checkbox'>
      <input type="checkbox" class="select-partial-checkbox" checked>
      <span class="species-name"><%= output.display_full_name %></span>
    </div>
  <% end %>

  <%= f.fields_for :input do |ff| %>
    <p>
      <i class="icon-info-sign"></i>
      Local selection
    </p>

    <%= ff.fields_for :distribution_reassignments do |fff| %>
      <div class="control-group">
        <label class="control-label">
          <%= fff.object.reassignable.geo_entity.name %>
        </label>
        <div class="controls">
          <%= fff.select :output_ids,
            options_for_select(
              @nomenclature_change.outputs.map do |o|
                [o.display_full_name, o.id]
              end,
              ff.object.distribution_reassignments.map(&:reassignment_targets).flatten.
              map(&:output).compact.map(&:id)
            ),
            {}, {:class => 'simple-taxon-concept', :multiple => ''}
          %>
          <input type="checkbox" class="select-all-checkbox" checked>Select All
        </div>
      </div>
    <% end %>

  <% end %>
<% end %>