<h2>New split: handle distribution</h2>
<p>
  <i class="icon-info-sign"></i>
  Distribution can be assigned to multiple split outputs.
</p>
<%= nomenclature_change_form do |f| %>
  <%= f.fields_for :input do |ff| %>

    <%= ff.fields_for :input_distribution_reassignments do |fff| %>
      <div class="control-group">
        <label class="control-label">
          <%= fff.object.reassignable.geo_entity.name %>
        </label>
        <div class="controls">
          <%= fff.select :nomenclature_change_output_id,
            options_for_select(
              @nomenclature_change.outputs.map{ |o| [o.taxon_concept.full_name, o.id] },
            ),
            {}, {:class => 'simple-taxon-concept', :multiple => ''}
          %>
          <input type="checkbox" class="select-all-checkbox">Select All
        </div>
      </div>
    <% end %>

  <% end %>
<% end %>