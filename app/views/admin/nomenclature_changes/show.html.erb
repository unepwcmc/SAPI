<h1>Nomenclature change <%= @nc.id %> </h1>

<div class="well well-small">
  <%= @nc.input.note_en.html_safe %>
</div>

<h4>
  Event: <i> <%= Event.find(@nc.event_id).name %> </i>
</h4>

<h4>
  Created by: <i> <%= User.find(@nc.created_by_id).name %> </i>
</h4>

<h4>
  Created at: <i> <%= @nc.created_at.to_date %> </i>
</h4>

<h4>
  Updated by: <i> <%= User.find(@nc.updated_by_id).name %> </i>
</h4>

<h4>
  Updated at: <i> <%= @nc.updated_at.to_date %> </i>
</h4>

<table class="table table-striped table-hover">
  <thead>
    <th>
      Input
    </th>
    <th>
      Outputs
    </th>
  </thead>
  <tbody>
    <td>
      <ul class="nav nav-tabs">
        <li class="active">
          <a href=<%= "#"+@nc.input.taxon_concept.full_name.downcase.tr(" ", "_") %> 
            data-toggle="tab"> <%= @nc.input.taxon_concept.full_name %> </a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane fade in active" id=<%= @nc.input.taxon_concept.full_name.
        downcase.tr(" ", "_") %>>
          <p>
            <i>
              <%= link_to @nc.input.taxon_concept.full_name, 
              admin_taxon_concept_names_path(@nc.input.taxon_concept) %>
            </i>
          </p>
          <p>
            Internal note:
            <%= @nc.input.internal_note %>
          </p>
        </div>
      </div>
    </td>
    <td>
      <ul class="nav nav-tabs">
        <% @nc.outputs.each_with_index do |output, idx| %>
          <% tc = output.new_taxon_concept || output.taxon_concept %>
          <% if idx == 0 %>
            <li class="active">
          <% else %>
            <li>
          <% end %>
            <a href=<%= "#"+tc.full_name.downcase.tr(" ", "_") %> data-toggle="tab"> 
              <%= tc.full_name %> 
            </a>
          </li>
        <% end %>
      </ul>
      <div class="tab-content">
        <% @nc.outputs.each_with_index do |output, idx| %>
          <% tc = output.new_taxon_concept || output.taxon_concept %>
          <% if idx == 0 %>
            <div class="tab-pane fade in active" id=<%= tc.full_name.downcase.tr(" ", "_") %>>
          <% else %>
            <div class="tab-pane fade" id=<%= tc.full_name.downcase.tr(" ", "_") %>>
          <% end %>
          <p><i> <%= link_to tc.full_name, admin_taxon_concept_names_path(tc) %> </i></p>
          <p> Author: <%= output.new_author_year || output.author_year %> </p>
          <p>
            Internal note:
            <%= output.internal_note %>
          </p>
        </div>
        <% end %>
      </div>
    </td>
  </tbody>
</table>
