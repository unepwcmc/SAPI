<% if @taxon_concept.taxon_concept_references || @taxon_concept.inherited_standard_references %>
  <table class="table table-striped table-hover">
    <thead>
      <th>
        Reference
      </th>
      <th>Std?</th>
      <th>
        Actions
      </th>
    </thead>
    <tbody>
    <% @taxon_concept.taxon_concept_references.each do |tc_ref| %>
      <% ref = tc_ref.reference %>
      <tr>
        <td>
          <p class="reference-citation"><%= ref.citation %></p>
        </td>
        <td><%= true_false_icon(tc_ref.is_standard) %></td>
        <td>
          <%= link_to delete_icon,
            admin_taxon_concept_taxon_concept_reference_url(@taxon_concept, tc_ref),
            :confirm => "Warning: you are about to delete data. Are you sure?", :method => :delete
          %>
        </td>
      </tr>
    <% end %>
    <% @taxon_concept.inherited_standard_references.each do |ref| %>
      <tr>
        <td>
          <p class="reference-citation"><%= ref.citation %></p>
        </td>
        <td><%= true_false_icon(true) %></td>
        <td>
        </td>
      </tr>
      <br>
    <% end %>
    </tbody>
  </table>
<% else %>
  No references defined.
<% end %>
