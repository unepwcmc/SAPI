var saveAndReopen = window.adminEditor.saveAndReopen;

var form = $("<%= escape_javascript(render('form')) %>");

$('#admin-new-taxon_concept_reference-form').html(form);
$('#references-list').html("<%= escape_javascript(render('list')) %>");

window.adminEditor.initModals();
window.adminEditor.nonSuperInit();

if (saveAndReopen) {

  window.adminEditor.alertSuccess("Operation successful");
  window.adminEditor.clearModalForm($('#admin-new-taxon_concept_reference-form'));

  $('#new-taxon_concept_reference').modal('show');
} else {
  // Show alert in the parent window, rather than in the modal
  window.adminEditor.__proto__.__proto__.alertSuccess("Operation successful");
  $('#new-taxon_concept_reference').modal('hide');
}

