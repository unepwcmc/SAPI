<%= form_for @resource || :annotation, as: :annotation, url: collection_path, remote: true do |f| %>

  <%= error_messages_for(@resource) %>

  <label>Event</label>
  <%= f.select :event_id,
    options_from_collection_for_select(@events, :id, :name, @resource&.event_id)
  %><br />

  <%= f.label :symbol %>
  <%= f.text_field :symbol %>

  <% traco_locale_columns(:full_note).each do |column| %>
    <%= f.label column %>
    <%= f.text_area column %>
  <% end %>

<% end %>