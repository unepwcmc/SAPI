<%= admin_new_modal({:title => "Current CITES Suspensions"}) {
  render :partial => "admin/cites_suspensions/current_suspensions_form",
    :locals => {:current_suspensions => @taxon_concept.current_cites_suspensions}
} %>

<%= nested_form_for [:admin, @taxon_concept, @cites_suspension], :html => {:class => 'form-horizontal'} do |f| %>

  <p>
    <%= link_to("View Current Suspensions", "#new-taxon_concept_cites_suspension",
      {
        :role => "button",
        :"data-toggle" => "modal",
      }) %>
  </p>

  <%= render :partial => 'admin/cites_suspensions/form_shared', :locals => {:f => f} %>

  <div class="control-group">
    <label class="control-label">Nomenclature note</label>
    <div class="controls">
      <%= f.text_area :nomenclature_note, :class => 'cites_suspension', :value => @cites_suspension.nomenclature_note %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Internal nomenclature note</label>
    <div class="controls">
      <%= f.text_area :internal_nomenclature_note, :class => 'cites_suspension', :value => @cites_suspension.internal_nomenclature_note %>
    </div>
  </div>

<% end %>
