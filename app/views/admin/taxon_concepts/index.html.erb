<%= admin_taxon_concept_title %>

<%= admin_new_modal %>
<%= admin_new_synonym_modal %>
<%= admin_new_hybrid_modal %>
<%= admin_new_suspension_modal %>

<%= form_for @search_params, :url => admin_taxon_concepts_url, 
  :method => :get, :html => {:class => 'form-inline'} do |f| %>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-search"></i></span>
    <%= f.text_field :scientific_name, :class => 'search-typeahead', :autocomplete => :off %>
  </div>

  <%= f.fields_for :taxonomy do |ff| %>
    <%= ff.select :id,
      options_from_collection_for_select(
        @taxonomies, "id", "name",
        @search_params.taxonomy && @search_params.taxonomy[:id]
      )
    %>
  <% end %>
  <%= f.submit 'Search'%>

<% end %>

