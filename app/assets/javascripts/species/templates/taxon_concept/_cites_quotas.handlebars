<strong class="title more">QUOTAS</strong>
{{#unless citesQuotas}}
  {{#if citesQuotasIsLoading}}
    {{ partial 'species/spinner'}}
  {{else}}
    <p class="empty">There are no current quotas in place for this species.</p>
  {{/if}}
{{else}}
  <table summary="data table">
    <thead>
      <tr>
        <th class="col1">&nbsp;</th>
        <th class="col2">YEAR</th>
        <th class="col3">COUNTRY</th>
        <th class="col4">QUOTA</th>
        <th class="col5">NOTES</th>
        <th class="col1">&nbsp;</th>
      </tr>
    </thead>
    <tbody {{bindAttr class="controller.citesQuotasExpanded:historic_expanded"}}>
      {{#each quota in currentCitesQuotas}}
        {{#if quota.public_display}}
          <tr class="current">
            <td>&nbsp;</td>
            <td>{{quota.year}}</td>
            <td>{{quota.geo_entity.name}}</td>
            <td>{{quota.quota}} {{quota.unit_name}}</td>
            <td>
              {{#if quota.subspecies_info}}
                {{{quota.subspecies_info}}}<br />
              {{/if}}
              {{{quota.notes}}}
            </td>
            <td class="last">&nbsp;</td>
          </tr>
        {{/if}}
      {{else}}
        <tr class="current">
          <td>&nbsp;</td>
          <td colspan=4>There are no current quotas in place for this species.</td>
          <td>&nbsp;</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{#if historicCitesQuotas}}
    <div {{bindAttr class=":historic controller.citesQuotasExpanded::hidden"}}>
      <table summary="data table">
        <thead>
          <tr>
            <th class="col1">&nbsp;</th>
            <th class="col2">&nbsp;</th>
            <th class="col3">&nbsp;</th>
            <th class="col4">&nbsp;</th>
            <th class="col5">&nbsp;</th>
            <th class="col1">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          {{#each quota in historicCitesQuotas}}
            {{#if quota.public_display}}
              <tr>
                <td>&nbsp;</td>
                <td>{{quota.year}}</td>
                <td>{{quota.geo_entity.name}}</td>
                <td>{{quota.quota}} {{quota.unit_name}}</td>
                <td>
                  {{#if quota.subspecies_info}}
                    {{{quota.subspecies_info}}}<br />
                  {{/if}}
                  {{quota.notes}}
                </td>
                <td class="last">&nbsp;</td>
              </tr>
              {{/if}}
            {{/each}}
        </tbody>
      </table>
    </div>
    <div {{bindAttr class=":btn-hloder citesQuotasExpanded:expanded"}}>
      {{#if controller.citesQuotasExpanded}}
        <a class="link active" {{action 'contractList' 'cites_quotas' 'citesQuotasExpanded'}}>HIDE HISTORY</a>
      {{else}}
        <a class="link" {{action 'expandList' 'cites_quotas' 'citesQuotasExpanded'}}>SHOW HISTORY</a>
      {{/if}}
    </div>
  {{/if}}
{{/unless}}
