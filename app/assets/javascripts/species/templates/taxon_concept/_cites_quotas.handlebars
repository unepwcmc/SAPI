<strong class="title more">Quotas</strong>
<table summary="data table">
  <thead>
    <tr>
      <th class="col1">&nbsp;</th>
      <th class="col2">YEAR</th>
      <th class="col3">COUNTRY</th>
      <th class="col4">QUOTA</th>
      <th class="col5">NOTES</th>
      <th class="col1">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each quota in quotas}}
      {{#if quota.public_display}}
        <tr {{bindAttr class="quota.is_current:current:historic"}}>
          <td>&nbsp;</td>
          <td>{{quota.year}}</td>
          <td>{{quota.geo_entity.name}}</td>
          <td>{{quota.quota}} {{quota.unit_name}}</td>
          <td>{{quota.notes}}</td>
          <td class="last">&nbsp;</td>
        </tr>
      {{/if}}
    {{/each}}
  </tbody>
</table>
<div {{bindAttr class=":btn-hloder citesQuotasExpanded:expanded"}}>
  {{#if controller.citesQuotasExpanded}}
    <a class="link" {{action 'contractCitesQuotas'}}>HIDE HISTORY</a>
  {{else}}
    <a class="link" {{action 'expandCitesQuotas'}}>SHOW HISTORY</a>
  {{/if}}
</div>
