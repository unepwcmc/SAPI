<strong class="title">EU LISTING</strong>
{{#unless euListings}}
  {{#if euListingsIsLoading}}
    {{ partial 'species/spinner'}}
  {{else}}
    <p class="empty">This species is not currently listed in the EU Annexes.</p>
  {{/if}}
{{else}}
  <table summary="data table">
    <thead>
      <tr>
        <th class="col2">ANNEX</th>
        <th class="col2">COUNTRY</th>
        <th class="col2">DATE</th>
        <th class="col3">NOTES</th>
        <th class="col3">LEGAL NOTICE</th>
      </tr>
    </thead>
    <tbody {{bindAttr class="controller.euListingsExpanded:historic_expanded"}}>
      {{#each listing in currentEuListings}}
        <tr class="current">
          <td>
            <div class="eu_appendix a_{{unbound listing.species_listing_name}}">
              <span>{{listing.species_listing_name}}</span>
            </div>
          </td>
          <td>{{listing.party_full_name}}</td>
          <td>{{listing.effective_at_formatted}}</td>
          <td>
            {{#if listing.subspecies_info}}
              {{{listing.subspecies_info}}}<br />
            {{/if}}
            {{#if listing.hash_full_note_en}}
              <a class="legal-links" {{action 'showFullNote' listing.hash_display listing.hash_full_note_en}}>
                {{listing.hash_display}}
              </a><br />
            {{/if}}
            {{#if listing.full_note_en}}
            {{#sizeGt listing.full_note_en max=800}}
                {{#if listing.short_note_en}}
                  {{{listing.short_note_en}}}<br />
                {{/if}}
                <a class="legal-links" {{action 'showFullNote' "Full note" listing.full_note_en}}>See full note</a>
              {{else}}
                {{{listing.full_note_en}}}
              {{/sizeGt}}
            {{/if}}
          </td>
          <td class="last">
            {{#if listing.event_url}}
              <a class="legal-links" href="{{unbound listing.event_url}}">
                {{listing.event_name}}
              </a>
            {{else}}
              {{listing.event_name}}
            {{/if}}
          </td>
        </tr>
      {{else}}
        <tr class="current">
          <td colspan=4>This species is not currently listed in the EU Annexes.</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{#if historicEuListings}}
    <div {{bindAttr class=":historic controller.euListingsExpanded::hidden"}}>
      <table summary="data table">
        <thead>
          <tr>
            <th class="col2">&nbsp;</th>
            <th class="col2">&nbsp;</th>
            <th class="col2">&nbsp;</th>
            <th class="col3">&nbsp;</th>
            <th class="col3">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          {{#each listing in historicEuListings}}
            <tr>
              <td>
                <div class="eu_appendix a_{{unbound listing.species_listing_name}}">
                  <span>{{listing.species_listing_name}}</span>
                </div>
              </td>
              <td>{{listing.party_full_name}}</td>
              <td>{{listing.effective_at_formatted}}</td>
              <td>
                {{#if listing.subspecies_info}}
                  {{{listing.subspecies_info}}}<br />
                {{/if}}
                {{#if listing.hash_full_note_en}}
                  <a class="legal-links" {{action 'showFullNote' listing.hash_display listing.hash_full_note_en}}>
                    {{listing.hash_display}}
                  </a><br />
                {{/if}}
                {{#if listing.full_note_en}}
                  {{#sizeGt listing.full_note_en max=800}}
                    {{#if listing.short_note_en}}
                      {{{listing.short_note_en}}}<br />
                    {{/if}}
                    <a class="legal-links" {{action 'showFullNote' "Full note" listing.full_note_en}}>See full note</a>
                  {{else}}
                    {{{listing.full_note_en}}}
                  {{/sizeGt}}
                {{/if}}
              </td>
              <td class="last">
                {{#if listing.event_url}}
                  <a class="legal-links" href="{{unbound listing.event_url}}">
                    {{listing.event_name}}
                  </a>
                {{else}}
                  {{listing.event_name}}
                {{/if}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div {{bindAttr class=":btn-hloder euListingsExpanded:expanded"}}>
      {{#if controller.euListingsExpanded}}
        <a class="link active" {{action 'contractList' 'eu_listings' 'euListingsExpanded'}}>HIDE HISTORY</a>
      {{else}}
        <a class="link" {{action 'expandList' 'eu_listings' 'euListingsExpanded'}}>SHOW HISTORY</a>
      {{/if}}
    </div>
  {{/if}}
{{/unless}}
