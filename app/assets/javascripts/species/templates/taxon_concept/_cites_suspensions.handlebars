<strong class="title more">Suspensions</strong>
{{#unless citesSuspensions}}
  <p class="empty">There are no current suspensions in place for this species.</p>
{{else}}
  <table summary="data table">
    <thead>
      <tr>
        <th class="col1">&nbsp;</th>
        <th class="col2">DATE</th>
        <th class="col3">COUNTRY</th>
        <th class="col4">NOTIFICATION</th>
        <th class="col5">NOTES</th>
        <th class="col1">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each suspension in currentCitesSuspensions}}
        <tr class="current">
          <td>&nbsp;</td>
          <td>
            {{suspension.start_date}}
            {{#unless suspension.is_current}}
              - {{suspension.end_date}}
            {{/unless}}
          </td>
          <td>{{suspension.geo_entity.name}}</td>
          <td>
            <a href="{{unbound suspension.start_notification.url}}">
              {{suspension.start_notification.name}}
            </a>
          </td>
          <td>{{{suspension.notes}}}</td>
          <td class="last">&nbsp;</td>
        </tr>
      {{else}}
        <tr class="current">
          <td>&nbsp;</td>
          <td colspan=4>There are no current suspensions in place for this species.</td>
          <td>&nbsp;</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{#if historicCitesSuspensions}}
    <div class="historic">
      <table summary="data table">
        <thead>
          <tr>
            <th class="col1">&nbsp;</th>
            <th class="col2">&nbsp;</th>
            <th class="col3">&nbsp;</th>
            <th class="col4">&nbsp;</th>
            <th class="col5">&nbsp;</th>
            <th class="col1">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          {{#each suspension in historicCitesSuspensions}}
            <tr>
              <td>&nbsp;</td>
              <td>
                {{suspension.start_date}}
                {{#unless suspension.is_current}}
                  - {{suspension.end_date}}
                {{/unless}}
              </td>
              <td>{{suspension.geo_entity.name}}</td>
              <td>
                <a href="{{unbound suspension.start_notification.url}}">
                  {{suspension.start_notification.name}}
                </a>,
                <a href="{{unbound suspension.end_notification.url}}">
                  {{suspension.end_notification.name}}
                </a>
              </td>
              <td>{{suspension.notes}} {{suspension.url}}</td>
              <td class="last">&nbsp;</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div {{bindAttr class=":btn-hloder citesSuspensionsExpanded:expanded"}}>
      {{#if controller.citesSuspensionsExpanded}}
        <a class="link" {{action 'contractList' 'cites_suspensions' 'citesSuspensionsExpanded'}}>HIDE HISTORY</a>
      {{else}}
        <a class="link" {{action 'expandList' 'cites_suspensions' 'citesSuspensionsExpanded'}}>SHOW HISTORY</a>
      {{/if}}
    </div>
  {{/if}}
{{/unless}}
