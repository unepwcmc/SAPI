<strong class="title">EU LISTING</strong>
{{#unless euListings}}

{{else}}
  <table summary="data table">
    <thead>
      <tr>
        <th class="col1">&nbsp;</th>
        <th class="col2">ANNEX</th>
        <th class="col3">COUNTRY</th>
        <th class="col4">DATE</th>
        <th class="col6">NOTES</th>
        <th class="col7">LEGAL NOTICE</th>
        <th class="col1">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each listing in euListings}}
      <tr {{bindAttr class="listing.is_current:current:historic"}}>
        <td>&nbsp;</td>
        <td>
          <div class="eu_appendix a_{{unbound listing.species_listing_name}}">
            <span>{{listing.species_listing_name}}</span>
          </div>
        </td>
        <td>{{listing.party_full_name}}</td>
        <td>{{listing.effective_at_formatted}}</td>
        <td>{{listing.short_note_en}}</td>
        <td>{{listing.event_name}}</td>
        <td class="last">&nbsp;</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div {{bindAttr class=":btn-hloder euListingsExpanded:expanded"}}>
    {{#if controller.euListingsExpanded}}
      <a class="link" {{action 'contractEuListings'}}>HIDE HISTORY</a>
    {{else}}
      <a class="link" {{action 'expandEuListings'}}>SHOW HISTORY</a>
    {{/if}}
  </div>
{{/unless}}
