<div class="tab-content">
  <div id="tab1">

    <div class="block" id="cites_listings">
      <h2>CITES</h2>
      {{ view Species.CitesListingChanges }}
    </div>

    <div class="block add" id="cites_quotas">
      {{ view Species.CitesQuotas }}
    </div>

    <div class="block add">
      <strong class="title more" id="cites_suspensions">Suspensions</strong>
      <table summary="data table">
        <thead>
          <tr>
            <th class="col1">&nbsp;</th>
            <th class="col2">DATE</th>
            <th class="col3">COUNTRY</th>
            <th class="col4">NOTIFICATION</th>
            <th class="col5">NOTES</th>
            <th class="col1">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          {{#each suspension in controller.citesSuspensions}}
            <tr {{bindAttr class="suspension.is_current:current"}}>
              <td>&nbsp;</td>
              <td>[{{suspension.start_date}}-{{suspension.end_date}}]</td>
              <td>{{suspension.geo_entity.name}}</td>
              <td>{{suspension.start_notification.name}}</td>
              <td>{{suspension.notes}}{{suspension.url}}</td>
              <td class="last">&nbsp;</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="btn-hloder">
        <a href="#" class="link">HIDE HISTORY</a>
      </div>
    </div>
    <div class="block add" id="eu_listings">
      <h2>EU Wildlife Trade Regulations</h2>
      {{ view Species.EuListingChangesÂ }}
    </div>
    <div class="block block01">
      <strong class="title">EU DECISIONS</strong>
      <table summary="data table">
        <thead>
          <tr>
            <th class="col1">&nbsp;</th>
            <th class="col2">DATE</th>
            <th class="col3">COUNTRY<br />OF ORIGIN</th>
            <th class="col8">SRG<br />OPINION</th>
            <th class="col9">SUSPENSIONS</th>
            <th class="col10">NOTES</th>
            <th class="col7">DOCUMENT</th>
            <th class="col1">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <tr class="current">
            <td>&nbsp;</td>
            <td>15/07/04</td>
            <td>Namibia</td>
            <td>Negative</td>
            <td>Art. 4.6 b</td>
            <td>Live wild specimens</td>
            <td>Commission Reg. (EC) No 757/2012 of 20 August 2012</td>
            <td class="last">&nbsp;</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div id="tab2">
    <div class="block block02">
      <strong class="title">COMMON NAMES</strong>
      <table summary="data table">
        <thead>
          <tr>
            <th class="col11">LANGUAGE</th>
            <th class="col12">NAME</th>
          </tr>
        </thead>
        <tbody>
          {{#foreach controller.commonNames}}
            <tr {{bindAttr class="$first:first"}}>
              <td>{{lang}}</td>
              <td>{{names}}</td>
            </tr>
          {{/foreach}}
        </tbody>
      </table>
      <div class="btn-hloder">
        <a href="#" class="link">SHOW 21 MORE LANGUAGES</a>
        <a href="#" class="link hide">SHOW 21 MORE LANGUAGES</a>
      </div>
    </div>
    <div class="block04">
      <strong class="title">SYNONYMS</strong>
      <div class="columns-holder">
        <ul class="col">
          {{#eachPart synonyms parts=2 page=0}}
            <li>{{full_name}} {{author_year}}</li>
          {{/eachPart}}
        </ul>
        <ul class="col">
          {{#eachPart synonyms parts=2 page=1}}
            <li>{{full_name}} {{author_year}}</li>
          {{/eachPart}}
        </ul>
      </div>
    </div>
    <div class="block04 block05">
      <strong class="title">SUBSPECIES</strong>
      <div class="columns-holder">
        <ul class="col">
        </ul>
        <ul class="col">
        </ul>
      </div>
    </div>
  </div>
  <div id="tab3">
    <div class="block06">
      <strong class="title">COUNTRIES</strong>
      <div class="three-columns">
        <ul class="col">
          {{#eachPart distributions parts=3 page=0}}
            <li><a href="#">{{name_en}}</a> {{formattedTags tags_list}}</li>
          {{/eachPart}}
          <div class="link-holder">
            <a href="#">Botswana</a>
            <div class="popup-holder">
              <div class="popup">
                <strong class="title">Myers, N. (1976).<br />The Leopard Panthera pardus in Africa</strong>
                <span class="text">ICON Monograph No.5. IUCN -Morges</span>
                <a href="#">Go to References</a>
              </div>
            </div>
          </div>
        </ul>
        <ul class="col">
          {{#eachPart distributions parts=3 page=1}}
            <li><a href="#">{{name_en}}</a> {{formattedTags tags_list}}</li>
          {{/eachPart}}
        </ul>
        <ul class="col last-child">
          {{#eachPart distributions parts=3 page=2}}
            <li><a href="#">{{name_en}}</a> {{formattedTags tags_list}}</li>
          {{/eachPart}}
        </ul>
      </div>
    </div>
  </div>
  <div id="tab4">
    <div class="block block02">
      <strong class="title">CITES STANDARD REFERENCE</strong>
      <table summary="data table">
        <tbody>
          {{#each reference in standardReferences}}
            <tr>
              <td>{{reference.citation}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="block block02 add">
      <strong class="title">OTHER TAXONOMIC REFERENCES</strong>
      <table summary="data table">
        <tbody>
          {{#each reference in controller.references}}
            {{#unless reference.is_standard}}
              <tr>
                <td>{{reference.citation}}</td>
              </tr>
            {{/unless}}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
