<div id="main">
  {{outlet search}}
  {{#if matchInfo}}
    <div id="match-info">
      {{{matchInfo}}}
    </div>
  {{/if}}
  <div class="heading-holder">
    <h1>{{fullName}}</h1>
    <h2>{{authorYear}}</h2>
    <ul class="list">
      <li>
      <a href="/species/taxonConcepts?taxonomy={{unbound taxonomy}}&taxon_concept_query={{unbound phylumName}}"
        {{action 'searchFor' phylumName}}>
          {{phylumName}}
        </a>
      </li>
      <li>
      <a href="/species/taxonConcepts?taxonomy={{unbound taxonomy}}&taxon_concept_query={{unbound className}}"
        {{action 'searchFor' className}}>
          {{className}}
        </a>
      </li>
      <li>
      <a href="/species/taxonConcepts?taxonomy={{unbound taxonomy}}&taxon_concept_query={{unbound orderName}}"
        {{action 'searchFor' orderName}}>
          {{orderName}}
        </a>
      </li>
      <li>
      <a href="/species/taxonConcepts?taxonomy={{unbound taxonomy}}&taxon_concept_query={{unbound familyName}}"
        {{action 'searchFor' familyName}}>
          {{familyName}}
        </a>
      </li>
      <li>
      <a href="/species/taxonConcepts?taxonomy={{unbound taxonomy}}&taxon_concept_query={{unbound genusName}}"
        {{action 'searchFor' genusName}}>
          {{genusName}}
        </a>
      </li>     
      {{#if isSubspecies}}
      <li> 
      {{#linkTo 'taxonConcept.legal' parentId}}<span class="species-name">{{speciesFullName}}</span>{{/linkTo}}
      </li>
      {{/if}}
    </ul>
  </div>
  <ul class="tabset">
    <li>{{#linkTo 'taxonConcept.legal'}}LEGAL{{/linkTo}}
      <ul>
        {{#unless isCms }}
          <li class="first"><a href="#cites_listings" class="scroll-to">CITES Listing</a></li>
          <li><a href="#cites_quotas" class="scroll-to">CITES Quotas</a></li>
          <li><a href="#cites_suspensions" class="scroll-to">CITES Suspensions</a></li>
          <li><a href="#eu_listings" class="scroll-to">EU Listing</a></li>
          <li class="last"><a href="#eu_decisions" class="scroll-to">EU Decisions</a></li>
        {{/unless}}
      </ul>
    </li>
    <li>{{#linkTo 'taxonConcept.names'}}NAMES{{/linkTo}}
      <ul>
      </ul>
    </li>
    <li class="add">{{#linkTo 'taxonConcept.distribution'}}DISTRIBUTION{{/linkTo}}
      <ul>
      </ul>
    </li>
    <li class="last-child">{{#linkTo 'taxonConcept.references'}}REFERENCES{{/linkTo}}
      <ul>
      </ul>
    </li>
  </ul>

  <div class="tab-content">
    {{ outlet }}
  </div>
</div>
