{{view Trade.AnnualReportUploadFormView controllerBinding="controller"}}

<div class="row-fluid">
  <div class="span6">
    <h3>Uploads in progress</h3>
  </div>
  <div class="span6">
    <button {{action 'deleteAllUploads'}} class="pull-right">Delete uploads</button>
  </div>
</div>
<hr>

<ul>
{{#each controller}}
  <li>
    {{#linkTo 'annual_report_upload' this}}
      {{this.summary}}
    {{/linkTo}}
    <a href="#" {{action 'deleteUpload' this}} class="pull-right">
      <i class="icon-remove-sign" title="Delete"></i>
    </a>
  </li>
{{else}}
  <li>No uploads found.</li>
{{/each}}
</ul>
